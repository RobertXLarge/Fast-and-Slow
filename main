def find_happy_number(num):
  slow, fast = num, num
  while True: #condicion principal
    slow = find_square_sum(slow) #mover un paso
    fast = find_square_sum(find_square_sum(fast)) #mover dos pasos
    if slow == fast: #encontrÃ³ el ciclo
      break
  return slow == 1 #ver si el ciclo se atasca en el nÃºmero 1

def find_square_sum(num):
  _sum = 0
  while (num > 0):
    digit = num % 10
    _sum += digit * digit
    num //= 10
  return _sum

def main():
  print(find_happy_number(23))
  print(find_happy_number(114))

main()
